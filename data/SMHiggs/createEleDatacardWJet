#!/bin/sh
preselection='pt_1>26&&taupt>30&&dilepton_veto==0&&iso_1<0.1&&againstElectronTightMVA6_2>0&&againstMuonLoose3_2>0&&byTightIsolationMVArun2v1DBoldDMwLT_2>0.5'
wselection='mtRecoil_1>80'
signalselection='mtRecoil_1>80'
zerojselection='njets==0'
#onejselection='(njets==1||(njets==2&&vbfMass<300)||njets>2)'
onejselection='(njets==1||(njets>=2&&(vbfMass<300||taupt<=30||pt_sv<=50)))'
vbfselection='njets>=2&&vbfMass>300&&taupt>30&&pt_sv>50'
#vbfselection='njets==2&&vbfMass>300'
vbfselectionHiggs=$vbfselection
trigselection='hltEle25erWPTightGsfTrackIsoFilter&&HLT_Ele25_eta2p1_WPTight_Gsf_v_fired>0' #only for MC
trigselectiondata='hltEle25erWPTightGsfTrackIsoFilter&&HLT_Ele25_eta2p1_WPTight_Gsf_v_fired>0&&EffCSVWeight==1'
relaxedSelection='pt_1>26&&taupt>30&&dilepton_veto==0&&iso_1<0.3&&byMediumIsolationMVArun2v1DBoldDMwLT_2>0.5&&againstElectronTightMVA6_2>0&&againstMuonLoose3_2>0'
luminosity=35870. #pb
direc='/nfs_scratch/laura/SM_new/'
datadirec=$direc
zttScale=1.00
zlftFactor=1.0
tauID=1.0
topWeight='topWeight'
bTagSF=1.0
#bTagSF='EffCSVWeight0'
zWeight='ZWEIGHT'
qcdfactor=1.00

bins=30
binning='binningHighStat=80.,200. binningLowStat=80.,200.'
mkdir datacards

###############2012##############3
wfactorErr=0.06
qcdfactor=1.0
qcdfactorerr=0.07
ggHWeight='tauPdfScale'
zWeightUnroll='1.0'
nohup MakeDataCardControlRegion channel='eleTau' shifts='Tau','Jet' dataFile=$datadirec'eleDATA.root' qcdFile=$direc'eleDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' inclselection=$inclselection preselection=$preselection  wselection=$wselection relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection    qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr zttScale=$zttScale zlftFactor=$zlftFactor wFactorErr=$wfactorErr ggHWeight=$ggHWeight  bTagSF=$bTagSF zerojselection=$zerojselection  onejselection=$onejselection vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs  muID=1.00  eleID=0.0 tauID=$tauID  dir=$direc'' bitmask=0,1,0,0 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*TAUID*puweight*EffCSVWeight0*trackweight*idisoweight_REDO*trigweight_REDO'  luminosity=$luminosity   variable='mtRecoil_1' bins=1 min=80 max=200 outputFile='datacards/htt_et.inputs-sm-13TeV-mt1-1-wjets.root' $binning  >0jetetWJET &

wfactorErr=0.06
qcdfactor=1.28
qcdfactorerr=0.13
ggHWeight='pthPdfScale'
zWeightUnroll=1.0
nohup MakeDataCardControlRegion channel='eleTau' shifts='Tau','Jet' dataFile=$datadirec'eleDATA.root' qcdFile=$direc'eleDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' inclselection=$inclselection preselection=$preselection  wselection=$wselection relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection    qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr zttScale=$zttScale zlftFactor=$zlftFactor wFactorErr=$wfactorErr ggHWeight=$ggHWeight  bTagSF=$bTagSF zerojselection=$zerojselection  onejselection=$onejselection  vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs    muID=1.00  eleID=0.0 tauID=$tauID  dir=$direc'' bitmask=0,0,1,0 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*TAUID*puweight*EffCSVWeight0*trackweight*idisoweight_REDO*trigweight_REDO'  luminosity=$luminosity  variable='mtRecoil_1' bins=1 min=80 max=200 outputFile='datacards/htt_et.inputs-sm-13TeV-mt1-2-wjets.root' $binning  >1jetetWJET &

wfactorErr=0.25
qcdfactor=1.0
qcdfactorerr=0.2
ggHWeight='mjjPdfScale'
#zWeightUnroll='zmumu_mjj'
zWeightUnroll='zmumu_mjj_REDO'
nohup MakeDataCardControlRegion channel='eleTau' shifts='Tau','Jet' dataFile=$datadirec'eleDATA.root' qcdFile=$direc'eleDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' inclselection=$inclselection preselection=$preselection  wselection=$wselection relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection    qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr zttScale=$zttScale zlftFactor=$zlftFactor wFactorErr=$wfactorErr ggHWeight=$ggHWeight  bTagSF=$bTagSF zerojselection=$zerojselection  onejselection=$onejselection  vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs    muID=1.00  eleID=0.0 tauID=$tauID  dir=$direc'' bitmask=0,0,0,1 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*TAUID*puweight*EffCSVWeight0*trackweight*idisoweight_REDO*trigweight_REDO'  luminosity=$luminosity  variable='mtRecoil_1' bins=1 min=80 max=200 outputFile='datacards/htt_et.inputs-sm-13TeV-mt1-3-wjets.root' $binning >2jetetWJET &

exit;
