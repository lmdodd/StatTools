#!/bin/sh
preselection='pt_1>26&&taupt>30&&dilepton_veto==0&&iso_1<0.3&&iso_1>0.1&&againstElectronTightMVA6_2>0&&againstMuonLoose3_2>0&&byTightIsolationMVArun2v1DBoldDMwLT_2>0.5'
wselection='mtRecoil_1>80'
signalselection='mtRecoil_1<50'
zerojselection='njets==0'
onejselection='(njets==1||(njets==2&&vbfMass<300)||njets>2)'
vbfselection='njets==2&&vbfMass>300'
vbfselectionHiggs=$vbfselection
trigselection='pt_1>26' #only for MC
trigselection='hltEle25erWPTightGsfTrackIsoFilter&&HLT_Ele25_eta2p1_WPTight_Gsf_v_fired>0' #only for MC
trigselectiondata='hltEle25erWPTightGsfTrackIsoFilter&&HLT_Ele25_eta2p1_WPTight_Gsf_v_fired>0' #only for MC
relaxedSelection='pt_1>26&&taupt>30&&dilepton_veto==0&&iso_1<0.3&&byMediumIsolationMVArun2v1DBoldDMwLT_2>0.5&&againstElectronTightMVA6_2>0&&againstMuonLoose3_2>0'
luminosity=35870. #pb
direc='/nfs_scratch/laura/SM_new/'
datadirec=$direc
zttScale=1.
zlftFactor=1.0
#zlftFactor='EleTauFake'
tauID=0.95
topWeight='topWeight'
bTagSF=1.0
zWeight='__ZWEIGHT3__'
qcdfactor=1.00

bins=30
binning='binningMVis0j=0.,60.,65.,70.,75.,80.,85.,90.,95.,100.,105.,110.,400. binningMSv1j=0.,80.,90.,100.,110.,120.,130.,140.,150.,160.,300. binningMSvVBF=0.,95.,115.,135.,155.,400. binningTauPt0j=30.,35.,40.,45.,50.,55.,300. binningPth1j=0.,100.,150.,200.,250.,300.,500. binningMjjVBF=300.,700.,1100.,1500.,3000.' 
mkdir datacards

###############2012##############3
wfactorErr=0.06
qcdfactor=1.0
qcdfactorerr=0.15
ggHWeight='tauPdfScale'
zWeightUnroll='1.0'
nohup MakeDataCardControlRegion channel='eleTau' shifts='Tau','Jet' dataFile=$datadirec'eleDATA.root' qcdFile=$direc'eleDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' inclselection=$inclselection preselection=$preselection  wselection=$wselection relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection    qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr zttScale=$zttScale zlftFactor=$zlftFactor wFactorErr=$wfactorErr ggHWeight=$ggHWeight  bTagSF=$bTagSF zerojselection=$zerojselection  onejselection=$onejselection vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs  muID=1.00  eleID=0.0 tauID=$tauID  dir=$direc'' bitmask=0,1,0,0 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*LFake*puweight*__QCDIDISO__*__QCDTRIG__'  luminosity=$luminosity    variable='m_vis'  bins=4 min=40 max=200 outputFile='datacards/htt_et.inputs-sm-13TeV-m_vis-1-antiiso.root'  >0jetAI&  
wfactorErr=0.06
qcdfactor=1.15
qcdfactorerr=0.15
ggHWeight='pthPdfScale'
zWeightUnroll='zmumu_pth'
nohup MakeDataCardControlRegion channel='eleTau' shifts='Tau','Jet' dataFile=$datadirec'eleDATA.root' qcdFile=$direc'eleDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' inclselection=$inclselection preselection=$preselection  wselection=$wselection relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection    qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr zttScale=$zttScale zlftFactor=$zlftFactor wFactorErr=$wfactorErr ggHWeight=$ggHWeight  bTagSF=$bTagSF zerojselection=$zerojselection  onejselection=$onejselection  vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs    muID=1.00  eleID=0.0 tauID=$tauID  dir=$direc'' bitmask=0,0,1,0 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*LFake*puweight*__QCDIDISO__*__QCDTRIG__'  luminosity=$luminosity  variable='m_sv' bins=4 min=40 max=200 outputFile='datacards/htt_et.inputs-sm-13TeV-m_sv-2-antiiso.root'  >1jetAI& 
wfactorErr=0.25
qcdfactor=1.20
qcdfactorerr=0.3
ggHWeight='mjjPdfScale'
zWeightUnroll='zmumu_mjj'
nohup MakeDataCardControlRegion channel='eleTau' shifts='Tau','Jet' dataFile=$datadirec'eleDATA.root' qcdFile=$direc'eleDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' inclselection=$inclselection preselection=$preselection  wselection=$wselection relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection    qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr zttScale=$zttScale zlftFactor=$zlftFactor wFactorErr=$wfactorErr ggHWeight=$ggHWeight  bTagSF=$bTagSF zerojselection=$zerojselection  onejselection=$onejselection  vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs    muID=1.00  eleID=0.0 tauID=$tauID  dir=$direc'' bitmask=0,0,0,1 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*LFake*puweight*__QCDIDISO__*__QCDTRIG__'  luminosity=$luminosity   variable='m_sv' bins=4 min=40 max=200 outputFile='datacards/htt_et.inputs-sm-13TeV-m_sv-3-antiiso.root'  >2jetAI&

exit;
