#!/bin/sh
preselection='pt_1>20&&taupt>30&&npv>0&&diLeptons==0&&iso_1<0.15&&byTightIsolationMVArun2v1DBoldDMwLT_2>0.5&&tightMuons<=1&&tightElectrons==0&&againstMuonTight3_2>0&&againstElectronVLooseMVA6_2>0&&diLeptons==0&&abs(eta_1)<2.1'
wselection='mtRecoil_1>80'
signalselection='mtRecoil_1>80'
zerojselection='njets==0'
onejselection='(njets==1||(njets==2&&vbfMass<300)||njets>2)'
vbfselection='njets==2&&vbfMass>300'
vbfselectionHiggs=$vbfselection
qcdselection=$preselection
trigselection='((pt_1>23&&((HLT_IsoMu22_v_fired>0||HLT_IsoTkMu22_v_fired>0)||HLT_IsoMu22_eta2p1_v_fired>0||HLT_IsoTkMu22_eta2p1_v_fired>0))||(pt_1<=23&&HLT_IsoMu19_eta2p1_LooseIsoPFTau20_v_fired>0&&hltOverlapFilterSingleIsoMu19LooseIsoPFTau20>0&&hltL3crIsoL1sSingleMu18erIorSingleMu20erL1f0L2f10QL3f19QL3trkIsoFiltered0p09>0))' 
trigselectiondata='((pt_1>23&&((HLT_IsoMu22_v_fired>0||HLT_IsoTkMu22_v_fired>0)||HLT_IsoMu22_eta2p1_v_fired>0||HLT_IsoTkMu22_eta2p1_v_fired>0))||(pt_1<=23&&HLT_IsoMu19_eta2p1_LooseIsoPFTau20_v_fired>0&&hltOverlapFilterSingleIsoMu19LooseIsoPFTau20>0&&hltL3crIsoL1sSingleMu18erIorSingleMu20erL1f0L2f10QL3f19QL3trkIsoFiltered0p09>0))' 
relaxedSelection='pt_1>20&&taupt>20&&npv>0&&diLeptons==0&&iso_1<0.3&&byMediumIsolationMVArun2v1DBoldDMwLT_2>0.5&&tightMuons<=1&&tightElectrons==0&&againstMuonTight3_2>0&&againstElectronVLooseMVA6_2>0&&abs(eta_1)<2.1'
luminosity=35870. #pb
direc='/nfs_scratch/laura/SM_new/'
datadirec=$direc
zttScale=1.
#topWeight=1.0
topWeight='topWeight'
zlftFactor=1.0
#zlftFactor='MuTauFake'
#zWeight=1.0
zWeight='__ZWEIGHT3__'
tauID=0.95
qcdfactor=1.00
bTagSF=1.0

bins=30

binning='binningHighStat=80.,200. binningLowStat=80.,200.'

mkdir datacards

############nominal ##############
#m_vis Madgraph

#######OLD################
wfactorErr=0.06
qcdfactor=1.0
qcdfactorerr=0.15
ggHWeight='tauPdfScale'
zWeightUnroll='1.0'
nohup MakeDataCardControlRegion channel='muTau' shifts='Tau','Jet' dataFile=$datadirec'muDATA.root' qcdFile=$direc'muDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' preselection=$preselection  wselection=$wselection  relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection   luminosityErr=0.045 qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr vvErr=0.3   zttScale=$zttScale zttScaleErr=0.033    wFactorErr=0.06    zjfterr=0.1  zlfterr=0.24   topErr=0.075 zlftFactor=$zlftFactor wfactorErr=$wfactorErr ggHWeight=$ggHWeight bTagSF=$bTagSF zerojselection=$zerojselection onejselection=$onejselection vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs muID=1.00 muIDErr=0.01 eleID=0.0 eleIDErr=0.0 tauID=$tauID tauIDErr=0.06  dir=$direc''  bID=1.0  bIDErr=0.10  bMisID=1.0  bMisIDErr=0.17    bitmask=0,1,0,0 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*LFake*puweight*idisoweight_1*trigweight_MuTau'  luminosity=$luminosity variable='mtRecoil_1' bins=18 min=0 max=180 outputFile='datacards/htt_mt.inputs-sm-13TeV-mt1-1-wjets.root' $binning  >0jetmuWJET & 
wfactorErr=0.06
qcdfactor=1.15
qcdfactorerr=0.15
ggHWeight='pthPdfScale'
zWeightUnroll=1.0
#zWeightUnroll='zmumu_pth'
nohup MakeDataCardControlRegion channel='muTau' shifts='Tau','Jet' dataFile=$datadirec'muDATA.root' qcdFile=$direc'muDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' preselection=$preselection  wselection=$wselection  relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection   luminosityErr=0.045 qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr vvErr=0.3   zttScale=$zttScale zttScaleErr=0.033    wFactorErr=0.06    zjfterr=0.1  zlfterr=0.24   topErr=0.075 zlftFactor=$zlftFactor wfactorErr=$wfactorErr ggHWeight=$ggHWeight bTagSF=$bTagSF zerojselection=$zerojselection onejselection=$onejselection vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs muID=1.00 muIDErr=0.01 eleID=0.0 eleIDErr=0.0 tauID=$tauID tauIDErr=0.06  dir=$direc''  bID=1.0  bIDErr=0.10  bMisID=1.0  bMisIDErr=0.17    bitmask=0,0,1,0 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*LFake*puweight*idisoweight_1*trigweight_MuTau'  luminosity=$luminosity variable='mtRecoil_1' bins=18 min=0 max=180 outputFile='datacards/htt_mt.inputs-sm-13TeV-mt1-2-wjets.root' $binning  >1jetmuWJET &
wfactorErr=0.25
qcdfactor=1.20
qcdfactorerr=0.3
ggHWeight='mjjPdfScale'
zWeightUnroll='zmumu_mjj'
nohup MakeDataCardControlRegion channel='muTau' shifts='Tau','Jet' dataFile=$datadirec'muDATA.root' qcdFile=$direc'muDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWKZ.root' topFile=$direc'TT.root' preselection=$preselection  wselection=$wselection  relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection   luminosityErr=0.045 qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr vvErr=0.3   zttScale=$zttScale zttScaleErr=0.033    wFactorErr=0.06    zjfterr=0.1  zlfterr=0.24   topErr=0.075 zlftFactor=$zlftFactor wfactorErr=$wfactorErr ggHWeight=$ggHWeight bTagSF=$bTagSF zerojselection=$zerojselection  onejselection=$onejselection vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs muID=1.00 muIDErr=0.01 eleID=0.0 eleIDErr=0.0 tauID=$tauID tauIDErr=0.06  dir=$direc''  bID=1.0  bIDErr=0.10  bMisID=1.0  bMisIDErr=0.17    bitmask=0,0,0,1 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*LFake*puweight*idisoweight_1*trigweight_MuTau'  luminosity=$luminosity  variable='mtRecoil_1' bins=18 min=0 max=180 outputFile='datacards/htt_mt.inputs-sm-13TeV-mt1-3-wjets.root' $binning  >2jetmuWJET & 
exit;


