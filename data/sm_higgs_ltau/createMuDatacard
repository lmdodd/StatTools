ggHWeight='tauPdfScale'
zWeightUnroll='1.0'
nohup MakeDataCardHTT2D channel='muTau' shifts='Tau','Jet' dataFile=$datadirec'muDATA129.root' qcdFile=$direc'muDATA129.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETS.root' vvFile=$direc'DiBoson.root' ewkFile=$direc'EWK.root' topFile=$direc'TT.root' preselection=$preselection  wselection=$wselection  relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection   luminosityErr=0.045 qcdfactor=$qcdfactor qcdfactorErr=$qcdfactorerr vvErr=0.3   zttScale=$zttScale zttScaleErr=0.033    wFactorErr=0.06    zjfterr=0.1  zlfterr=0.24   topErr=0.075 zlftFactor=$zlftFactor wfactorErr=$wfactorErr ggHWeight=$ggHWeight bTagSF=$bTagSF zerojselection=$zerojselection onejselection=$onejselection vbfselection=$vbfselection vbfselectionHiggs=$vbfselectionHiggs muID=1.00 muIDErr=0.01 eleID=0.0 eleIDErr=0.0 tauID=$tauID tauIDErr=0.06  dir=$direc''  bID=1.0  bIDErr=0.10  bMisID=1.0  bMisIDErr=0.17    bitmask=0,1,0,0 TTweight=$topWeight Zweight=$zWeight ZUnrollweight=$zWeightUnroll weight='__WEIGHT__*GENWEIGHT*puweight*idisoweight_1*trigweight_1*POGtrack'  luminosity=$luminosity  variable='m_vis' variableUnroll='pt_2' bins=18 min=0 max=180 outputFile='datacards/htt_mt.inputs-sm-13TeV-m_vis-1-2D.root' $binning >0jet & 
