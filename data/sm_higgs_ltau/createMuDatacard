#vbfselection='njetingap==0&&vbfMass>300&&pt_2>30'
vbfselection='njets==2&&vbfMass>300&&pt_2>30'
vbfselectionHiggs=$vbfselection
qcdselection=$preselection
trigselection='pt_1>23' #only for MC
