#!/bin/sh

preselection='pt_1>26&&pt_2>20&&npv>0&&diLeptons==0&&iso_1<0.15&&byTightIsolationMVArun2v1DBdR03oldDMwLT_2>0.5&&tightMuons<=1&&tightElectrons==0&&againstMuonTight3_2>0&&againstElectronVLooseMVA6_2>0'
#preselection='pt_1>25&&pt_2>20&&npv>0&&diLeptons==0&&iso_1<0.15&&byTightIsolationMVArun2v1DBdR03oldDMwLT_2>0.5&&tightMuons<=1&&tightElectrons==0&&againstMuonTight3_2>0&&againstElectronVLooseMVA6_2>0'
wselection='pt_1>26&&pt_2>20&&npv>0&&diLeptons==0&&iso_1<0.15&&byTightIsolationMVArun2v1DBdR03oldDMwLT_2<0.5&&tightMuons<=1&&tightElectrons==0&&againstMuonTight3_2>0&&againstElectronVLooseMVA6_2>0&&(HLT_IsoMu24_v_fired>0||HLT_IsoTkMu24_v_fired>0)'
signalselection='met>125&&pth>100&&m_vis<125&&dR<2.0'
qcdselection=$preselection
#trigselection='pt_1>26&&(HLT_IsoMu24_v_fired>0||HLT_IsoTkMu24_v_fired>0)' #only for MC
trigselection='pt_1>26&&(HLT_IsoMu24_v_fired>0||HLT_IsoTkMu24_v_fired>0)&&BadMuonFilter==1&&Flag_HBHENoiseFilter_fired==1&&Flag_HBHENoiseIsoFilter_fired==1&&Flag_globalTightHalo2016Filter_fired==1&&Flag_goodVertices_fired==1&&Flag_EcalDeadCellTriggerPrimitiveFilter_fired==1' #only for Data
#trigselectiondata='pt_1>26&&(HLT_IsoMu24_v_fired>0||HLT_IsoTkMu24_v_fired>0)&&nbtagNoSF==0'
trigselectiondata='pt_1>26&&(HLT_IsoMu24_v_fired>0||HLT_IsoTkMu24_v_fired>0)&&nbtagNoSF==0&&Flag_eeBadScFilter_fired==1&&BadMuonFilter==1&&Flag_HBHENoiseFilter_fired==1&&Flag_HBHENoiseIsoFilter_fired==1&&Flag_globalTightHalo2016Filter_fired==1&&Flag_goodVertices_fired==1&&Flag_EcalDeadCellTriggerPrimitiveFilter_fired==1' #only for Data
relaxedSelection='pt_1>26&&pt_2>20&&npv>0&&diLeptons==0&&iso_1<0.15&&byLooseIsolationMVArun2v1DBdR03oldDMwLT_2>0.5&&tightMuons<=1&&tightElectrons==0&&againstMuonTight3_2>0&&againstElectronVLooseMVA6_2>0&&nbtagNoSF==0&&(HLT_IsoMu24_v_fired>0||HLT_IsoTkMu24_v_fired>0)'
luminosity=36814 #pb
#luminosity=36814 #pb
direc='/nfs_scratch/laura/monohiggs_2/'
#datadirec='/hdfs/store/user/laura/monohiggs_Jan20/'
#datadirec='/nfs_scratch/laura/monohiggs_temp/'
datadirec=$direc
zttScale=1.
topWeight='topWeight'
#zWeight=1.0
zWeight='__ZWEIGHT__'
#zWeight='ZPt_reweight'
vWeight='WPt_reweight'
#vWeight=1.21
#zWeight=1.16
#bTagSF=1.0
zlftFactor='MuTauFake'
bTagSF='EffCSVWeight0'
tauID=0.94
qcdfactor=1.0
bins=30
binning='binningLowStat=0.,20,40,60,90,120,150,180,210,250,300,350,400,450,600,2000. binningHighStat=0.,20.,40.,60.,80.,100.,120.,140.,160.,180.,200.,250.,300.,350.' 
#binning='binningLowStat=0.,20,40,60,90,120,150,180,210,250,300,350,400,450,500,600,700,1200,2000. binningHighStat=0.,20.,40.,60.,80.,100.,120.,140.,160.,180.,200.,250.,300.,350.' 
mkdir datacards 


nohup MakeDataCardXTT channel='muTau' shifts='Tau,MET' dataFile=$datadirec'muDATA.root' qcdFile=$direc'muDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETSHT.root' vvFile=$direc'DiBoson.root'  zhFile=$direc'smH125.root' ewkFile=$direc'EWK.root' vvFile=$direc'DiBoson.root' zvvFile=$direc'Znunu.root' topFile=$direc'TT.root' preselection=$preselection  wselection=$wselection relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection    luminosityErr=0.045 qcdfactor=$qcdfactor qcdfactorErr=0.02 vvErr=0.3   zttScale=$zttScale zttScaleErr=0.033    wFactorErr=0.06    zjfterr=0.1  zlfterr=0.24   topErr=0.075  bTagSF=$bTagSF 	muID=1.00 muIDErr=0.01 eleID=0.0 eleIDErr=0.0 tauID=$tauID tauIDErr=0.06  dir=$direc''  bID=1.0  bIDErr=0.10  bMisID=1.0  bMisIDErr=0.17    bitmask=1,0,0,0 TTweight=$topWeight Zweight=$zWeight Vweight=$vWeight weight='__WEIGHT__*GENWEIGHT*puweight*POGid1*POGid2*POGtrigger'  luminosity=$luminosity  variable='m_vis' bins=25 min=0 max=125 outputFile='datacards/xtt_mt.inputs-13TeV-mvis.root' $binning & 

nohup  MakeDataCardXTT channel='muTau' blinding="mt12<200" shifts='Tau,MET'  dataFile=$datadirec'muDATA.root' qcdFile=$direc'muDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETSHT.root' zhFile=$direc'smH125.root' ewkFile=$direc'EWK.root' vvFile=$direc'DiBoson.root' zvvFile=$direc'Znunu.root' topFile=$direc'TT.root' preselection=$preselection  wselection=$wselection  relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection   qcdselection=$qcdselection luminosityErr=0.045 qcdfactor=$qcdfactor qcdfactorErr=0.02 vvErr=0.3   zttScale=$zttScale zttScaleErr=0.033    wFactorErr=0.06    zjfterr=0.1  zlfterr=0.24   topErr=0.075  bTagSF=$bTagSF 	muID=1.00 muIDErr=0.01 eleID=0.0 eleIDErr=0.0 tauID=$tauID tauIDErr=0.06  dir=$direc''  bID=1.0  bIDErr=0.10  bMisID=1.0  bMisIDErr=0.17    bitmask=1,0,0,0 TTweight=$topWeight Vweight=$vWeight Zweight=$zWeight weight='__WEIGHT__*GENWEIGHT*puweight*POGid1*POGid2*POGtrigger'  luminosity=$luminosity  variable='mt12' bins=200 min=0 max=2000 outputFile='datacards/xtt_mt.inputs-13TeV-mt.root' $binning &

nohup MakeDataCardXTT channel='muTau' shifts='Tau,MET' dataFile=$datadirec'muDATA.root' qcdFile=$direc'muDATA.root' zttFile=$direc'ZJETS.root' zllFile=$direc'ZJETS.root' wFile=$direc'WJETSHT.root' zhFile=$direc'smH125.root' ewkFile=$direc'EWK.root' vvFile=$direc'DiBoson.root' zvvFile=$direc'Znunu.root' topFile=$direc'TT.root' preselection=$preselection  wselection=$wselection  relaxedSelection=$relaxedSelection trigselection=$trigselection trigselectiondata=$trigselectiondata  signalselection=$signalselection   qcdselection=$qcdselection luminosityErr=0.045 qcdfactor=$qcdfactor qcdfactorErr=0.02 vvErr=0.3   zttScale=$zttScale zttScaleErr=0.033    wFactorErr=0.06    zjfterr=0.1  zlfterr=0.24   topErr=0.075  bTagSF=$bTagSF 	muID=1.00 muIDErr=0.01 eleID=0.0 eleIDErr=0.0 tauID=$tauID tauIDErr=0.06  dir=$direc''  bID=1.0  bIDErr=0.10  bMisID=1.0  bMisIDErr=0.17    bitmask=1,0,0,0 TTweight=$topWeight Vweight=$vWeight Zweight=$zWeight weight='__WEIGHT__*GENWEIGHT*puweight*POGid1*POGid2*POGtrigger'  luminosity=$luminosity  variable='met' bins=200 min=0 max=2000 outputFile='datacards/xtt_mt.inputs-13TeV-met.root' $binning >outMTMET &


exit;
